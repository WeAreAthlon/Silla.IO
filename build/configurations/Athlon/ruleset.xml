<?xml version="1.0"?>
<ruleset name="Athlon">
    <description>The Athlon coding standard.</description>

    <!-- Include the PSR2 standard. -->
    <rule ref="PSR2">
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace"/>
    </rule>

    <!-- Athlon standard for file comments. -->
    <rule ref="Athlon.Commenting.FileComment" />
    <rule ref="Athlon.Commenting.VariableComment" />

    <!-- Use all Squiz commenting standards except for file and variable comments. -->
    <rule ref="Squiz.Commenting.ClassComment" />
    <rule ref="Squiz.Commenting.DocCommentAlignment" />
    <rule ref="Squiz.Commenting.FunctionComment" />
    <rule ref="Squiz.Commenting.FunctionCommentThrowTag" />
    <rule ref="Squiz.Commenting.EmptyCatchComment" />
    <rule ref="Squiz.Commenting.InlineComment" />
    <rule ref="Squiz.Commenting.PostStatementComment" />
</ruleset>
